            <div class="container mt-2 d-flex justify-content-center gap-2">
                <button onclick="setSeason('spring')" class="btn btn-outline-success btn-sm">Xuân</button>
                <button onclick="setSeason('summer')" class="btn btn-outline-warning btn-sm">Hạ</button>
                <button onclick="setSeason('autumn')" class="btn btn-outline-danger btn-sm">Thu</button>
                <button onclick="setSeason('winter')" class="btn btn-outline-primary btn-sm">Đông</button>
                <button onclick="setSeason('default')" class="btn btn-outline-secondary btn-sm">Mặc định</button>
            </div>
        </div>
