<%- include('header') %>

    <div class="container mt-5">
        <h2>Thêm Điểm Rèn Luyện</h2>

        <form action="/diemrenluyen/them" method="POST">
            <input type="hidden" name="sinhvien" value="<%= sinhvien._id %>">
            <input type="hidden" name="hocKy" value="<%= hocKy._id %>">

            <div class="mb-3">
                <label class="form-label">Sinh viên</label>
                <input type="text" class="form-control" value="<%= sinhvien.hoTen %>" readonly>
            </div>

            <div class="mb-3">
                <label class="form-label">Học kỳ</label>
                <input type="text" class="form-control" value="<%= hocKy.tenHocKy %>" readonly>
            </div>

            <div class="mb-3">
                <label for="diem" class="form-label">Điểm rèn luyện</label>
                <input type="number" step="0.01" min="0" max="100" name="diem" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="xepLoai" class="form-label">Xếp loại</label>
                <textarea name="xepLoai" class="form-control"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Thêm</button>
            <a href="/diemrenluyen" class="btn btn-secondary ms-2">Hủy</a>
        </form>
    </div>

    <%- include('footer') %>